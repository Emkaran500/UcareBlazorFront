@page "/register"
@inject HttpClient Http
@using UcareBlazorApp.Models

<style>
    .mainDiv {
        border: 1.5px solid black;
        width: 700px;
        padding: 30px;
        border-radius: 20px;
    }

    .container {
        display: flex;
        justify-content: center;
        max-height: 100vh;
    }
</style>

 <h3 class="text-center mb-4">Register</h3>
<div class="container">

    <EditForm Model="registerModel" OnValidSubmit="HandleRegister" FormName="RegisterForm">
            <DataAnnotationsValidator />
            <ValidationSummary />
    <div class="mainDiv">

            <div class="form-group mb-3">
                <label for="name" class="form-label">
                    <i class="bi bi-person-fill"></i> Name
                </label>
                <InputText id="name" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.Name" />
            </div>

            <div class="form-group mb-3">
                <label for="surname" class="form-label">
                    <i class="bi bi-person-circle"></i> Surname
                </label>
                <InputText id="surname" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.Surname" />
            </div>

            <div class="form-group mb-3">
                <label for="email" class="form-label">
                    <i class="bi bi-envelope-fill"></i> Email
                </label>
                <InputText id="email" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.Email" />
            </div>

            <div class="form-group mb-3">
                <label for="phoneNumber" class="form-label">
                    <i class="bi bi-telephone-fill"></i> Phone Number
                </label>
                <InputText id="phoneNumber" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.PhoneNumber" />
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">
                    <i class="bi bi-lock-fill"></i> Password
                </label>
                <InputText id="password" type="password" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.Password" />
            </div>

            <div class="form-group mb-3">
                <label for="confirmPassword" class="form-label">
                    <i class="bi bi-lock-fill"></i> Confirm Password
                </label>
                <InputText id="confirmPassword" type="password" class="form-control border border-primary rounded-pill" @bind-Value="registerModel.ConfirmPassword" />
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill">
                <i class="bi bi-person-plus-fill"></i> Register
            </button>
    </div>
        </EditForm>
</div>

@code {
    private RegisterModel registerModel = new RegisterModel();

    private async Task HandleRegister()
    {
        var response = await Http.PostAsJsonAsync("api-syuda-deystvitelniy", registerModel);
        if (response.IsSuccessStatusCode)
        {
           
        }
        else
        {
            
        }
    }
}
